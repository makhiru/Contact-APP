<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="#C5E1F8"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/updatetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Update Contact"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/updateedtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:hint="Enter Name"
        android:inputType="text"
        android:textAllCaps="false"
        android:textColor="#225A87"
        android:textColorHint="#225A87"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/updateedtnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:hint="Enter Number"
        android:inputType="number"
        android:textAllCaps="false"
        android:textColor="#225A87"
        android:textColorHint="#225A87"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/updatebtddnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:backgroundTint="#0E91FA"
            android:text="save"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/updatebtnclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0E91FA"
            android:text="close"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>